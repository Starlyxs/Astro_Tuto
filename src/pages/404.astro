---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import { Image } from "astro:assets";
import img404 from  "../assets/images-404/404.webp";
---

<Layout title="404: Not Found" description="404: Not Found" >
    <div class="min-h-dvh min-w-dvw flex justify-center items-center bg-[#FFB06E]">
        <header class="font-cascadia-code flex items-center justify-center flex-col" >
            <div class=" mb-7">
                <h1 class="text-center text-3xl  w-full h-full text-black sm:text-4xl md:text-5xl">
                    404 : NO FOUND
                </h1>  
                <h2 class="text-center text-xl  w-full h-full text-black sm:text-2xl md:text-3xl mt-5">
                    No te preocupes, se solucionara pronto (⁠๑⁠•⁠﹏⁠•⁠).</h2>
            </div>
            <Image src={img404} alt="404" class="w-60 rounded-2xl  sm:w-sm md:w-md" />
        </header>
    </div>
</Layout>